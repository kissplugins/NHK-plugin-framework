{
    "name": "nhk/event-manager",
    "description": "Event management system built on NHK Framework - Reference Implementation",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "version": "1.0.0",
    "authors": [
        {
            "name": "NHK Framework Team",
            "email": "dev@nhkframework.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "composer/installers": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.8",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "NHK\\EventManager\\": "src/",
            "NHK\\Framework\\": "framework/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NHK\\EventManager\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress src/",
        "phpstan": "phpstan analyse src/ --level=6",
        "post-install-cmd": [
            "[ -f vendor/bin/phpcs ] && vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs || true"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
